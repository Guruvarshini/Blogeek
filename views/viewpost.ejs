<!-- viewpost.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Posts</title>
    <style>
        body {
            width: 100%;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            flex-direction: column;
        }
        .add-post-btn {
            display: block;
            margin: 20px auto;
            padding: 10px 15px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            text-align: center;
            cursor: pointer;
        }
        .update-btn {
            margin: 20px;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            width: 100px;
            text-decoration: none;
            border-radius: 4px;
            text-align: center;
            cursor: pointer;
    }
    .delete-btn{
        margin: 20px;
            padding: 10px;
            background-color: #ff0000;
            color: #fff;
            text-decoration: none;
            width: 100px;
            border-radius: 4px;
            text-align: center;
            cursor: pointer;
    }
        .add-post-btn:hover {
            background-color: #0056b3;
        }
        .post-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 80%;
            margin-bottom: 20px;
            box-sizing: border-box;
        }
        .full{
            width: 100%;
            height: 100vh;
        }
        .half{
            min-height: 50vh;
        }
        h1{
            text-align: center;
        }
        h2 {
            color: #007bff;
        }

        p {
            color: #333;
        }
        .meta-info {
            color: #888;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="full">
    <%-include("../views/partials/header.ejs")%>
    <%if(posts.length!==0){%>
        <h1 style="color: #007bff;">All Posts</h1>
        <a class="add-post-btn" href="/add-post">Add Post</a>
    <% posts.forEach(post => { %>
        <div class="post-container">
            <h2><%= post.title %></h2>
            <p class="meta-info">By <%= post.author %> on <%= post.date %> | Tags: <%= post.category %></p>
            <p><%= post.content %></p>
            <a href="/update-post/<%=post.id%>" class="update-btn">Update</a>
            <a href="/delete-post/<%=post.id%>" class="delete-btn">Delete</a>
        </div>
    <% }); }else{%>
        <div class="half">
        <div class="post-container">
        <h1 style="color: #007bff;">No Posts Start to Create!!</h1>
    </div>
    <a class="add-post-btn" href="/add-post">Add Post</a>
    </form>
    <%}%>
    <%-include("../views/partials/footer.ejs")%>
</div>
</body>
</html>
